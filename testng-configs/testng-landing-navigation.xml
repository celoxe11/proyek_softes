<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<!-- 
    LANDING PAGE NAVIGATION TEST
    This tests all navigation menu items and sub-menus on the landing page
    Run with: mvn test "-DsuiteXmlFile=testng-configs/testng-landing-navigation.xml"
-->
<suite name="Landing Page Navigation Test Suite" verbose="1">
    
    <test name="Landing Navigation Tests" preserve-order="true">
        <classes>
            <class name="com.proyek_softes.demo.landing.LandingNavigationTest">
                <methods>
                    <!-- Main menu visibility -->
                    <include name="testMainMenuVisibility" />
                    
                    <!-- About menu tests -->
                    <include name="testAboutMainMenu" />
                    <include name="testAboutSubMenus" />
                    
                    <!-- Products menu tests -->
                    <include name="testProductsMainMenu" />
                    <include name="testProductsSubMenus" />
                    
                    <!-- Services menu tests -->
                    <include name="testServicesMainMenu" />
                    <include name="testServicesSubMenus" />
                    
                    <!-- Resources menu tests -->
                    <include name="testResourcesMainMenu" />
                    <include name="testResourcesSubMenus" />
                    
                    <!-- Community menu tests -->
                    <include name="testCommunityMainMenu" />
                    <include name="testCommunitySubMenus" />
                    
                    <!-- Get Started menu tests -->
                    <include name="testGetStartedMainMenu" />
                    <include name="testGetStartedSubMenus" />
                    
                    <!-- Dropdown visibility -->
                    <include name="testDropdownVisibility" />
                    
                    <!-- Comprehensive test -->
                    <include name="testAllNavigationItems" />
                </methods>
            </class>
        </classes>
    </test>

</suite>
